<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/AboutLayout"
    android:background="@color/white"
    tools:context="com.parassidhu.cdlumaths.fragments.About">
   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:layout_scrollFlags="scroll|enterAlways"
       android:scrollbars="none">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:layout_centerHorizontal="true"
               android:src="@drawable/icon"
               android:id="@+id/image"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/image"
               android:text="CDLU MATHEMATICS HUB"
               android:textColor="@color/colorPrimary"
               android:layout_marginTop="20dp"
               android:textSize="20sp"
               android:id="@+id/appname"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:textColor="@color/black"
               android:layout_below="@id/appname"
               android:text="BY PARAS SIDHU"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:id="@+id/dev" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/dev"
               android:text="VERSION 2.4"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:id="@+id/appversion"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/linear"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="15dp"
               android:layout_below="@id/appversion">
               <ImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/facebook"
                   android:src="@drawable/facebook"/>
               <ImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_marginLeft="50dp"
                   android:id="@+id/twitter"
                   android:src="@drawable/twitter"/>
           </LinearLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/txt2"
               android:text="Read my story at:"
               android:textColor="@color/colorPrimary"
               android:textSize="20dp"
               android:textAllCaps="true"
               android:layout_below="@id/linear"/>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="170dp"
               android:src="@drawable/urs"
               android:layout_below="@id/txt2"
               android:id="@+id/urs"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:layout_below="@id/urs"
               android:text="Special Thanks:"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:id="@+id/dev2" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/sir"
               android:layout_toRightOf="@id/dev2"
               android:layout_below="@id/urs"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:textColor="@color/colorPrimary"
               android:textSize="16sp"
               android:text="SH. BALWANT SAHARAN"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/sir"
               android:layout_centerHorizontal="true"
               android:text="SPECIALLY FOR 3RD SEMESTER STUDENTS:"
               android:layout_marginTop="10dp"
               android:textColor="@color/black"
               android:layout_marginBottom="5dp"
               android:textSize="16sp"
               android:id="@+id/dev4" />

            <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:layout_below="@id/dev4"
               android:id="@+id/livehtml"
               android:textColor="#000000"
               android:text="Live HTML:  Get rid of default HTML/CSS coding system. Start coding in real-time. Just start coding on the left side and get instant output on the right hand side."
               android:layout_marginTop="5dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/live"
               android:text="Download Live HTML"
               android:focusable="true"
               android:clickable="true"
               android:layout_marginLeft="10dp"
               android:textColor="@color/colorPrimary"
               android:layout_below="@id/livehtml"
               android:layout_centerHorizontal="true"
               style="?android:attr/borderlessButtonStyle"
               android:layout_marginTop="10dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:id="@+id/seeall"
               android:text="Browse All Softwares"
               android:focusable="true"
               android:clickable="true"
               android:layout_marginLeft="10dp"
               android:textColor="@color/colorPrimary"
               android:layout_below="@id/live"
               style="?android:attr/borderlessButtonStyle"
               android:layout_marginTop="10dp"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@id/seeall"
           android:layout_centerHorizontal="true"
           >
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/icon2"
               android:layout_marginTop="20dp"
               android:layout_below="@id/seeall"
               android:id="@+id/di"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/DI"
               android:text="Download Informer"
               android:layout_toRightOf="@id/di"
               android:layout_below="@id/seeall"
               android:layout_marginTop="40dp"
               android:layout_marginLeft="20dp"
               android:textSize="35sp"
               android:textColor="#000000"
               android:fontFamily="sans-serif-thin"/>
       </LinearLayout>
       </RelativeLayout>
   </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
