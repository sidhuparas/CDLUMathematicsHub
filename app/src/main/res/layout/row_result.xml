<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPaddingTop="-3dp"
    card_view:contentPaddingBottom="-3dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_marginLeft="0dp"
        android:layout_width="match_parent"
        android:id="@+id/resultrelative"
        android:layout_height="wrap_content"
        android:background="@drawable/aqua_grad">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subname"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-light"
            android:textAppearance="@style/CardView.Light"
            android:text="Hello"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:paddingBottom="6dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/subname"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_android"
            android:text="Hello"
            android:paddingRight="20dp"
            android:textAppearance="@style/CardView.Light"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>